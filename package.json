{
  "name": "devchat",
  "private": true,
  "version": "0.0.1",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "build": "pnpm -r run build",
    "build:shared": "pnpm --filter=shared run build",
    "build:auth": "pnpm --filter=auth run build",
    "build:gateway": "pnpm --filter=gateway run build",
    "auth": "pnpm --filter=auth run start",
    "gateway": "pnpm --filter=gateway run start",
    "dev:auth": "pnpm --filter=auth dev",
    "dev:gateway": "pnpm --filter=gateway dev",
    "dev": "pnpm -r --parallel run dev",
    "lint": "eslint \"{apps,libs}/**/*.ts\" --fix",
    "test": "jest",
    "test:auth": "pnpm --filter=auth run test",
    "test:gateway": "pnpm --filter=gateway run test",
    "clean": "pnpm -r run clean",
    "deps:install": "pnpm install",
    "deps:update": "pnpm update -r"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/testing": "^11.1.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "eslint": "^9.33.0",
    "jest": "^30.0.5",
    "prettier": "^3.6.2",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.4.1",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@nestjs/microservices": "^11.1.6",
    "kafkajs": "^2.2.4"
  }
}

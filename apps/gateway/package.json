{
  "name": "gateway",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "cd ../.. && nest start gateway",
    "start:dev": "cd ../.. && nest start gateway --watch",
    "start:debug": "cd ../.. && nest start gateway --debug --watch",
    "start:prod": "node dist/main",
    "build": "cd ../.. && nest build gateway",
    "build:watch": "cd ../.. && nest build gateway --watch",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/microservices": "^11.0.1",
    "@nestjs/config": "^3.2.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/websockets": "^11.0.0",
    "@nestjs/platform-socket.io": "^11.0.0",
    "shared": "workspace:*",
    "socket.io": "^4.8.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "class-validator": "^0.14.1",
    "class-transformer": "^0.5.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "kafkajs": "^2.2.4",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/passport": "^1.0.16",
    "@types/passport-jwt": "^4.0.1",
    "@types/uuid": "^10.0.0",
    "rimraf": "^5.0.0"
  }
}
